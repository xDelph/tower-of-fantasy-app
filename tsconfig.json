{
	"compileOnSave": false,
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES5"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/@types/global.d.ts"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./build/**/*", "tmp", "dist", "scripts", "debug", "resources"]
}


